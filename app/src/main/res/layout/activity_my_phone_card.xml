<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/redDark"
        >
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_left"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的电话卡"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓    名："
            android:textSize="@dimen/sp_14"
            android:layout_margin="@dimen/dp_25"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/name"
            android:layout_toEndOf="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/idcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证："
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_below="@id/name"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/idcard"
            android:layout_alignBottom="@+id/idcard"
            android:layout_toEndOf="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电    话："
            android:textSize="@dimen/sp_14"
            android:layout_margin="@dimen/dp_25"
            android:layout_below="@id/idcard"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/phone"
            android:layout_toRightOf="@+id/phone"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/greylight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/service_user"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/service_user"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:drawableTop="@mipmap/icon3"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_3"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/greylight" />
        <TextView
            android:id="@+id/query_statistics"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/query_statistics"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:drawableTop="@mipmap/icon3"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_3"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/greylight" />
        <TextView
            android:id="@+id/income_statistics"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/income_statistics"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:drawableTop="@mipmap/icon3"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_3"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/greylight" />
        <TextView
            android:id="@+id/service_channel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/service_channel"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:drawableTop="@mipmap/icon3"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_3"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/greylight" />


</LinearLayout>