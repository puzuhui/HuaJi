<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_toolbar"
        android:id="@+id/relativeLayout"/>

    <TextView
        android:id="@+id/tv_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intergral"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        android:padding="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tv_tianxian_numb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tianxian_numb"
        app:layout_constraintTop_toBottomOf="@id/tv_integral"
        android:padding="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_15"/>

    <EditText
        android:id="@+id/et_tianxian_numb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/size_background"
        android:hint="请输入现金积分"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_80"
        android:paddingTop="@dimen/dp_5"
        android:textSize="@dimen/sp_12"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@id/tv_tianxian_numb"
        app:layout_constraintLeft_toRightOf="@id/tv_tianxian_numb"
        app:layout_constraintTop_toTopOf="@id/tv_tianxian_numb"/>

    <TextView
        android:id="@+id/tv_tianxian_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择提现银行卡"
        app:layout_constraintTop_toBottomOf="@id/tv_tianxian_numb"
        android:padding="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tv_bank_numb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/size_background"
        android:padding="@dimen/dp_5"
        android:text="请选择提现银行卡号"
        android:textColor="@color/transparent80"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tianxian_bank"
        android:layout_marginLeft="@dimen/dp_5"/>

    <TextView
        android:id="@+id/tv_tianxian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提现"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_numb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/login_btn_red"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingRight="@dimen/dp_55"
        android:paddingLeft="@dimen/dp_55"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_15"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="每次至少提现10积分，提现收取10%服务费（平台管理服务费9%和第三方手续费1%）"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/greylight"
        android:padding="@dimen/dp_10"
        android:textColor="@color/transparent80"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintDimensionRatio="H,12:9"/>
</android.support.constraint.ConstraintLayout>