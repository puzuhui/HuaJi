<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_gravity="center_horizontal">
        <EditText
            android:id="@+id/login_numb"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入登录账号"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:maxLines="1"
            android:background="@drawable/get_cold_left"
            android:padding="@dimen/dp_5" />
        <TextView
            android:id="@+id/sure"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@drawable/get_cold_red"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

    <TextView
        android:id="@+id/no_numb"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:text="您输入的账号不存在，请核对后重新输入"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:maxLines="1"
                android:padding="@dimen/dp_5" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="@color/white"
                android:padding="@dimen/dp_5"
                android:textSize="14sp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/please_enter_id_number"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:hint="@string/please_enter_id_number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:maxLines="1"
            android:background="@drawable/login_edit_white"
            android:padding="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"/>
        <EditText
            android:id="@+id/please_enter_phone_number"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:hint="@string/please_enter_phone_number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:maxLines="1"
            android:background="@drawable/login_edit_white"
            android:padding="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10">
            <EditText
                android:id="@+id/please_enter_verification_code"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/please_enter_verification_code"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:maxLines="1"
                android:background="@drawable/get_cold_left"
                android:padding="@dimen/dp_5" />
            <TextView
                android:id="@+id/get_code"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_code"
                android:textColor="@color/white"
                android:background="@drawable/get_cold_red"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <EditText
            android:id="@+id/set_possword"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:hint="@string/set_possword"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:maxLines="1"
            android:background="@drawable/login_edit_white"
            android:padding="@dimen/dp_5"
            android:maxLength="20"
            android:layout_marginBottom="@dimen/dp_10"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/please_enter_possword_two"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:hint="@string/please_enter_possword_two"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:maxLines="1"
            android:background="@drawable/login_edit_white"
            android:padding="@dimen/dp_5"
            android:maxLength="20"
            android:inputType="textPassword"
            android:layout_marginBottom="@dimen/dp_15"/>


        <TextView
            android:id="@+id/submit"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/login_edit_reddark"
            android:padding="8dp"/>
    </LinearLayout>
</LinearLayout>