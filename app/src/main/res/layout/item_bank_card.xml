<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/pinkred"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardPreventCornerOverlap="true"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mingxuan.huaji.utils.CircleImageView
            android:id="@+id/bank_card_iv"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:padding="@dimen/dp_5"
            android:background="@drawable/circle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/dp_10"/>

        <com.mingxuan.huaji.utils.CircleImageView
            android:id="@+id/bank_card_iv_two"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0.1"/>

        <TextView
            android:id="@+id/bank_card_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@id/bank_card_iv"
            app:layout_constraintTop_toTopOf="@id/bank_card_iv"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/bank_card_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bank_card_tv_name"
            app:layout_constraintLeft_toLeftOf="@id/bank_card_tv_name"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/bank_card_tv_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bank_card_tv_type"
            app:layout_constraintLeft_toLeftOf="@id/bank_card_tv_type"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>