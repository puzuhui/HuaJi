<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/redDark"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_left" />

        <TextView
            android:id="@+id/head_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="电话卡"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <com.bigkoo.convenientbanner.ConvenientBanner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/converientBanner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:canLoop="true"
        /><!--是否循环-->

    <TextView
        android:id="@+id/phone_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="业务受理"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@mipmap/adh03"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:id="@+id/telecom_phone_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子渠道开户 \n  (电信)"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@mipmap/adh02"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/link_phone_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线下网点开户 \n  (联通)"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@mipmap/adh03"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>