<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/redDark"
        >
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_left"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_integral"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/redDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="可提现（元）"
            android:textColor="@color/white"
            android:padding="@dimen/dp_5"/>
        <TextView
            android:id="@+id/tv_numb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:background="@color/redDark"
            android:padding="@dimen/dp_15"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_withdrawals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_white_choose"
            android:text="提现"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_30"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_consumption_integral"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="消费积分"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_commission_integral"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="佣金积分"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:background="@color/redDark"
            android:padding="@dimen/dp_10"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_detailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="可提现积分明细"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_5"
        android:background="@color/greylight"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview"
        android:padding="@dimen/dp_5"/>

</LinearLayout>