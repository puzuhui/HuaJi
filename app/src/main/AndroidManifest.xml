<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mingxuan.huaji">
    <!-- 读写SD卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/hjhplogo64"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".layout.HomePageViewPagerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".layout.LoginActivity" android:launchMode="singleTask"
            android:screenOrientation="portrait"/><!--登录页面-->
        <activity android:name=".layout.RegisitActivity" android:launchMode="singleTask"
            android:screenOrientation="portrait"/><!--注册页面-->
        <activity android:name=".layout.four.activity.MyFriendActivity"
            android:screenOrientation="portrait"/><!--我的伙伴-->
        <activity android:name=".layout.two.activity.ListOfGoodsActivity"
            android:screenOrientation="portrait"/><!--商品列表-->
        <activity android:name=".layout.two.activity.CommodityDetailsActivity"
            android:screenOrientation="portrait"/><!--商品详情-->
        <activity android:name=".layout.four.activity.MyShoppingCartActivity"
            android:screenOrientation="portrait"/><!--我的购物车-->
        <activity android:name=".layout.four.activity.MyAdressActivity"
            android:launchMode="singleTask" android:screenOrientation="portrait"/><!--我的地址-->
        <activity android:name=".layout.four.activity.AddAddressActivity"
            android:screenOrientation="portrait"/><!--编辑收货地址-->
        <activity android:name=".layout.four.activity.MyIntergralActivity"
            android:screenOrientation="portrait"/><!--我的积分-->
        <activity android:name=".layout.four.activity.BalanceActivity"
            android:screenOrientation="portrait"/><!--余额-->
        <activity android:name=".layout.four.activity.MyBankCardActivity"
            android:screenOrientation="portrait"/><!--我的银行卡-->
        <activity android:name=".layout.four.activity.AddBankCardActivity"
            android:screenOrientation="portrait"/><!--添加银行卡-->
        <activity android:name=".layout.four.activity.MyInformationActivity"
            android:screenOrientation="portrait"/><!--我的信息-->
        <activity android:name=".layout.four.activity.MyOrderActivity"
            android:launchMode="singleTask" android:screenOrientation="portrait"/><!--我的订单-->
        <activity android:name=".layout.four.activity.ProductsReviewsActivity"
            android:screenOrientation="portrait"/><!--商品评论-->
        <activity android:name=".layout.two.activity.ConfirmAnOrderActivity"
            android:screenOrientation="portrait"/><!--确认订单-->
        <activity android:name=".layout.two.activity.CommentActivity"
            android:screenOrientation="portrait"/><!--评论-->
        <activity android:name=".layout.two.activity.PhoneCardActivity" android:screenOrientation="portrait"/>
        <activity android:name=".layout.two.activity.ChoosePhoneCardActivity" android:screenOrientation="portrait"/>

        <!--支付宝-->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.alipay.sdk.app.H5AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>

        <!--微信支付-->
        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="wxa08821893494a1a5"/>
            </intent-filter>
        </activity>

    </application>

</manifest>